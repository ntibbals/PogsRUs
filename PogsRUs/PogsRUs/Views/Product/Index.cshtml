@model IEnumerable<PogsRUs.Models.Product>
@{
    ViewData["Title"] = "PogsRUs";
    Layout = "_Layout";
}
@{
}

@foreach (var product in Model)
{

    <div class="card bg-light mb-3 shadow p-3 " style="max-width: 40rem; margin: 1rem auto">
        <div class="card-body">
            <h5 class="card-header">@product.Name</h5>

            <img class="card-img shadow p-3" src="@product.Image" alt="@product.Description" style="padding: 1rem">


            <p class="card-text" style="margin-top: 1rem">@product.Description</p>

        </div>
    </div>

}